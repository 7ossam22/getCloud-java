<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.Profile"
    android:background="@drawable/ic_login_foreground"
  >
    <android.widget.Button
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/transparent"
        android:foreground="@drawable/ic_baseline_arrow_back_24"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:onClick="onBackPressed"/>
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Profile"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"/>
    <ImageView
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line"
        android:layout_below="@id/textView3"
        android:layout_margin="15dp"/>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/upper"
        android:layout_below="@+id/textView"
        android:layout_marginTop="80dp"
        />
    <ImageView
        android:id="@+id/user_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_person"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Name"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:layout_below="@id/user_img"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/userAccount"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Account"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:layout_below="@id/userName"
        android:maxLines="1"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/changeprofile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Change Profile Picture"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:layout_below="@id/line4"
        android:maxLines="1"
        android:drawableStart="@drawable/ic_baseline_image_24"
        android:drawablePadding="7dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
       />
    <TextView
        android:id="@+id/deleteaccount"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Delete Account"
        android:textColor="#AF1919"
        android:textSize="18dp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:layout_below="@id/changeprofile"
        android:drawableStart="@drawable/ic_baseline_delete_forever_24"
        android:drawablePadding="7dp"
        android:maxLines="1"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:layout_below="@id/view2"
        android:drawablePadding="5dp"
        android:maxLines="1"
        android:layout_marginStart="15dp"
        android:drawableStart="@drawable/ic_baseline_settings_24"
        android:layout_marginTop="20dp"/>

    <ProgressBar
        android:id="@+id/progress_bar4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:visibility="gone"
        tools:visibility="visible"
        />



</RelativeLayout>